/**************************************************
1)Ler um número e imprimir se ele é par ou ímpar.
***************************************************/

#include <stdlib.h>
#include <stdio.h>
int main ()
{
    int num;
    printf("digite um numero inteiro: ");
    scanf("%d",&num);
    if(num%2==0)//operador módulo (%)
    {
        printf("Par");
    }
    else
        printf("Ímpar");

    return 0;
}
